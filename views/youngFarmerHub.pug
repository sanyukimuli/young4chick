doctype html
head
  meta(charset='UTF-8')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title YF Hub
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css')
  link(href='https://fonts.googleapis.com/css2?family=Pacifico&family=Roboto:wght@400;700&display=swap' rel='stylesheet')
  link(rel='stylesheet' href='/styles/youngFarmers.css')
nav.navbar.bg-body-tertiary
  .container-fluid
    a.navbar-brand.d-flex.align-items-center.gap-2(href='#')
      img(src='/images/chicklogo.jpeg' alt='Logo' width='60' height='54')
      span.navbar-brand-text Young4Chick
    a(href='/index.html')
      button.btn.btn-light Logout
.container.mt-4
  h1.mb-4 Welcome to the YF Hub
  .row
    .col-md-6.mb-4
      form(action='/farmer/request' method='POST')
        h2 Chick &amp; Feed Request Form
        label(for='chickType') Chick Type
        select.form-select.mb-3
          option
          option Broiler
          option Layer
        label(for='farmerStatus') Farmer Status
        select.form-select.mb-3
          option
          option Starter Farmer
          option Returning Farmer
        label(for='chickCategory') Chick Category
        select.form-select.mb-3
          option
          option Exotic
          option Local
        label(for='quantity') Quantity
        input.form-control.mb-3(type='number' name='chickQuantity')
        label Feed Amount
        input.form-control.mb-3(type='number' name='feedAmount')
        button.btn.btn-light(type='submit') Submit Request
    .col-md-6.mb-4
      ul#orderTabs.nav.nav-tabs(role='tablist')
        li.nav-item(role='presentation')
          button.nav-link.active(data-bs-toggle='tab' data-bs-target='#active-orders' type='button') Active Orders
        li.nav-item(role='presentation')
          button.nav-link(data-bs-toggle='tab' data-bs-target='#order-history' type='button') Order History
      .tab-content.mt-3
        #active-orders.tab-pane.fade.show.active
          .card.p-3
            p No active orders yet.
        #order-history.tab-pane.fade
          .card.p-3
            p No order history available.
  .mb-5
    h2.mb-4 My Farm
    form(action='/farmer/myfarm' method='POST')
      .row.g-3
        .col-md-6
          .card.p-3
            label.form-label Farm Name
            input.form-control(type='text' placeholder='e.g. GreenFields Ltd')
        .col-md-6
          .card.p-3
            label.form-label Farm Location
            input.form-control(type='text' placeholder='e.g. Wakiso District')
        .col-md-6
          .card.p-3
            label.form-label Farm Size (acres)
            input.form-control(type='number' step='0.1' min='0' placeholder='e.g. 1.5')
        .col-md-6
          .card.p-3
            label.form-label Farm Type
            select.form-select
              option(selected='' disabled='') Select Type
              option(value='Broiler') Broiler
              option(value='Layer') Layer
              option(value='Mixed') Mixed
              option(value='Other') Other
        .col-12
          .card.p-3
            label.form-label Additional Notes / Questions
            textarea.form-control(rows='3' placeholder='e.g. I need help with feed planning...')
        .col-12.text-end
          button.btn.btn-primary.mt-3(type='submit') Edit Farm Info
script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js')
